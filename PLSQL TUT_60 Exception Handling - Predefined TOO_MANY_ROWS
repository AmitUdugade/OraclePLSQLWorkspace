-- Exception Handling - Predefined TOO_MANY_ROWS

SET SERVEROUTPUT ON;

DECLARE
    V_FNAME VARCHAR2(20);
BEGIN
    SELECT FIRST_NAME INTO V_FNAME FROM EMPLOYEE WHERE EMPID IN (1,2,3);
    DBMS_OUTPUT.PUT_LINE(V_FNAME);
EXCEPTION
    WHEN TOO_MANY_ROWS THEN
        DBMS_OUTPUT.PUT_LINE('TOO MANY ROWS.');
END;
/

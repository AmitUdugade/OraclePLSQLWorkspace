-- Exception Handling - Predefined NO_DATA_FOUND

SET SERVEROUTPUT ON;

DECLARE
    FNAME VARCHAR2(20);
BEGIN
    SELECT FIRST_NAME INTO FNAME FROM EMPLOYEE WHERE EMPID = 7;
    DBMS_OUTPUT.PUT_LINE(FNAME);
EXCEPTION
    WHEN NO_DATA_FOUND THEN
        DBMS_OUTPUT.PUT_LINE('NO SUCH EMPLOYEE RECORD FOUND.');
END;
/
